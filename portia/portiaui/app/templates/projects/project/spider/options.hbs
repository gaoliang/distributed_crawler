{{#tool-group id="spider-options-group" collapsible=false onClose=(action 'closeOptions') as |group|}}
    {{#if (eq group.section "tabs")}}
        {{#group.tab toolId="spider-options"}}
            Spider properties
        {{/group.tab}}
    {{else if (eq group.section "panels")}}
        {{#group.panel class="extracted-items container-fluid" toolId="spider-options" as |active|}}
            {{spider-options spider=model}}
        {{/group.panel}}
    {{/if}}
{{/tool-group}}
